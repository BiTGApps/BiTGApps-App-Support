<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Widget styles -->
    <style name="Widget.BiTGApps" parent="@android:style/Widget.Material" />


    <style name="Widget.BiTGApps.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.BiTGApps.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.BiTGApps.ToolbarTitle</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.BiTGApps.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DividerText">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


</resources>
